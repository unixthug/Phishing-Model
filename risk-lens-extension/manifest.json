{
  "manifest_version": 2,
  "name": "RiskLens",
  "version": "0.1.0",
  "description": "Shows a per-site risk score and changes the toolbar icon based on model output.",

  "permissions": [
    "tabs",
    "storage",
    "<all_urls>",
    "http://127.0.0.1/*",
    "http://localhost/*"
  ],

  "browser_action": {
    "default_title": "RiskLens",
    "default_popup": "popup.html",
    "default_icon": "icons/safe.png"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}